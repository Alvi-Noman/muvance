PORT=3001 # The port your service will run on

JWT_SECRET=your-jwt-secret-here # Replace with a strong secret key
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here # Replace with a strong secret key

MONGODB_URI=your-mongodb-uri-here # e.g. mongodb+srv://user:pass@host/db
MONGODB_DB_NAME=authDB

MAX_SESSIONS=5 # Max concurrent sessions/devices per user

CORS_ORIGIN=http://localhost:5173 # Allowed frontend origin(s)
FRONTEND_URL=http://localhost:5173 # Used for magic link emails

SMTP_HOST=your-smtp-host-here # e.g. smtp.gmail.com
SMTP_PORT=465 # SMTP port, e.g. 465 for SSL
SMTP_SECURE=true # true if using SSL
SMTP_USER=your-smtp-user-here # Your SMTP username/email
SMTP_PASS=your-smtp-password-here # Your SMTP password or app password
SMTP_FROM=your-smtp-from-email-here # The email address to send from
EMAIL_FROM_NAME=YourAppName

RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in ms
RATE_LIMIT_MAX=20 # Max requests per window per IP

LOG_LEVEL=info # Log verbosity
NODE_ENV=development # or production